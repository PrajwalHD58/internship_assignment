<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreen_content_controls"
    style="@style/Widget.Theme.Task_intern.ButtonBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:background="?attr/fullscreenBackgroundColor"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.Task_intern.FullscreenContainer"
    tools:context=".FullscreenActivity"
    tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:layout_margin="5dp"
                    android:id="@+id/menu_bar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAY"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APP"
                    android:textSize="35dp"
                    android:textColor="#FFFFF7"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_baseline_backup_table_24"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:src="@drawable/finance"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:focusable="true"
            >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/layout_1">
                      <ImageView
                          android:layout_width="150dp"
                          android:layout_height="120dp"
                          android:src="@drawable/icon"
                          android:layout_margin="5dp"
                          android:layout_gravity="center_horizontal"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="SCAN AND PAY"
                          android:textSize="20dp"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginTop="10dp"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Lorem ipsum is simply dummy text"
                          android:textSize="12dp"
                          android:textColor="@color/black"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"/>

              </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/layout_2"
            android:backgroundTint="@color/white"
            android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:src="@drawable/paymentmethod"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REQUEST MONEY"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum is simply dummy text"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
